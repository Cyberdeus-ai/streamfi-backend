{
    "name": "pollenfi-backend",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "start": "node build/server.js",
        "start:graphql": "node build/server-graphql.js",
        "start:all": "concurrently \"npm run start\" \"npm run start:graphql\"",
        "lint": "eslint . --ext .ts src",
        "dev": "nodemon --exec ts-node-dev --respawn --transpile-only server.ts",
        "dev:graphql": "nodemon --exec ts-node-dev --respawn --transpile-only server-graphql.ts",
        "dev:all": "concurrently \"npm run dev\" \"npm run dev:graphql\"",
        "generate-certs": "node scripts/generate-ssl-certs.js",
        "setup-certbot": "bash scripts/setup-certbot.sh"
    },
    "keywords": [
        "superfluid",
        "nodejs",
        "express",
        "typescript"
    ],
    "author": "Cyberdeus",
    "license": "MIT",
    "description": "PollenFi Backend",
    "dependencies": {
        "@apollo/server": "^4.11.3",
        "@graphql-tools/schema": "^10.0.8",
        "@superfluid-finance/sdk-core": "^0.9.0",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.2",
        "body-parser": "^2.2.0",
        "concurrently": "^9.1.2",
        "cors": "^2.8.6",
        "cron": "^4.3.3",
        "dotenv": "^17.2.1",
        "ethers": "^5.7.2",
        "express": "^5.1.0",
        "fs": "^0.0.1-security",
        "graphql": "^16.11.0",
        "graphql-request": "^7.4.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-tag": "^2.12.6",
        "graphql-ws": "^5.16.2",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.30.1",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "path": "^0.12.7",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "siwe": "^3.0.0",
        "typeorm": "^0.3.26",
        "ws": "^8.19.0"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.3",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.3.0",
        "@types/pg": "^8.15.5",
        "@types/ws": "^8.18.1",
        "nodemon": "^3.1.10",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    }
}
