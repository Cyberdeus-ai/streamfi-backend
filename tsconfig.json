{
    "compilerOptions": {
      "target": "es2016",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "outDir": "./build",
      "rootDir": ".",
      "resolveJsonModule": true,
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
  